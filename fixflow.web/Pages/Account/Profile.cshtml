@page
@model fixflow.Web.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="page-shell">
    <div class="page-header">
        <h1 class="page-title">User Profile</h1>
        <p class="page-subtitle">Update your contact details and password settings.</p>
    </div>

    <div class="card">
        <form method="post" asp-page-handler="UpdateProfile" class="form-stack">
            <div class="form-grid">
                <div class="form-field">
                    <label asp-for="ProfileInput.UserName"></label>
                    <input asp-for="ProfileInput.UserName" />
                </div>
                <div class="form-field">
                    <label asp-for="ProfileInput.FirstName"></label>
                    <input asp-for="ProfileInput.FirstName" />
                </div>

                <div class="form-field">
                    <label asp-for="ProfileInput.LastName"></label>
                    <input asp-for="ProfileInput.LastName" />
                </div>

                <div class="form-field">
                    <label asp-for="ProfileInput.Email"></label>
                    <input asp-for="ProfileInput.Email" />
                </div>

                <div class="form-field">
                    <label asp-for="ProfileInput.PhoneNumber"></label>
                    <input asp-for="ProfileInput.PhoneNumber" />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit">Save Profile</button>
            </div>
        </form>
    </div>

    <div class="card">
        <form method="post" asp-page-handler="ChangePassword" asp-route-userId="@Model.PasswordInput.UserId" asp-route-token="@Model.PasswordInput.SecurityTokenStash" class="form-stack">
            <div class="page-header">
                <h2 class="page-title">Password</h2>
                <p class="page-subtitle">Keep your account secure with a strong password.</p>
            </div>

            <div class="form-grid">
                <div class="form-field">
                    <label asp-for="PasswordInput.CurrentPassword"></label>
                    @if (Model.RequireCurrentPassword)
                    {
                        <input type="password" asp-for="PasswordInput.CurrentPassword" />
                    }
                    else
                    {
                        <input asp-for="PasswordInput.CurrentPassword" disabled />
                    }
                </div>
                <div class="form-field">
                    <label asp-for="PasswordInput.NewPassword"></label>
                    <input type="password" asp-for="PasswordInput.NewPassword" />
                </div>
                <div class="form-field">
                    <label asp-for="PasswordInput.VerifyPassword"></label>
                    <input type="password" asp-for="PasswordInput.VerifyPassword" />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit">Update Password</button>
            </div>
        </form>
    </div>
</div>