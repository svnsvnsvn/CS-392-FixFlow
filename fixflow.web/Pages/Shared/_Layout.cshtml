@using Microsoft.AspNetCore.Identity
@using fixflow.web.Data
@inject SignInManager<AppUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "FixFlow")</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Be+Vietnam+Pro:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="site-header">
        <nav class="navbar">
            <a class="navbar-brand" href="/Dashboard">FixFlow</a>
            <div class="navbar-links">
                <a href="/Dashboard">Dashboard</a>
                @if (!SignInManager.IsSignedIn(User))
                {
                    <a href="/Account/Login">Login</a>
                }
                else
                {
                    <a href="/Account/Profile">Profile</a>
                }
            </div>
            <div class="navbar-user">
                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="navbar-username">@User.Identity?.Name</span>
                }
            </div>
        </nav>
    </header>

    <main class="page">
        @RenderBody()
    </main>
</body>
</html>
